# Pi4 Window A アプリ共通設定（コピーして window-a.env を作成）

# RaspberryPiServer (Pi5) API
RASPI_SERVER_BASE=http://raspi-server.local:8501
RASPI_SERVER_API_TOKEN=raspi-token-CHANGE-ME
RASPI_SERVER_TIMEOUT=5.0

# Socket.IO リスナー設定（Pi5 側の /socket.io を視聴）
RASPI_SERVER_SOCKET_URL=http://raspi-server.local:8501
UPSTREAM_SOCKET_PATH=/socket.io
UPSTREAM_SOCKET_AUTO=1
SOCKET_STATUS_WATCHDOG=1
TOOLMGMT_CLIENT_ROLE=window-a

# DocumentViewer (同一 Pi4 で稼働する想定。変更する場合は URL を書き換える)
DOCUMENT_VIEWER_URL=http://127.0.0.1:5000

# PostgreSQL 接続
DATABASE_URL=postgresql://app:app@raspi-server.local:15432/sensordb

# その他の制御フラグ
ENABLE_LOCAL_SCAN=1
API_TOKEN_ENFORCE=1
WINDOW_A_API_TOKEN_HEADER=X-API-Token
# API 監査ログの出力先を変えたい場合のみ指定
# API_AUDIT_LOG=/home/tools02/RaspberryPiSystem_001/window_a/logs/api_actions.log

# shutdown API を使う場合にだけ設定する（任意）
# SHUTDOWN_TOKEN=secret-token
